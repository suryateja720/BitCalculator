<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:elevation="5dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/result_calculation_display"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@color/grey"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/result_display"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="17dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:elevation="5dp"
                android:id="@+id/output_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="TYP"
                android:textColor="@color/grey" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:elevation="5dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/input_calculation_display"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@color/grey"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/input_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="end"
                        android:padding="10dp"
                        android:textSize="17dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:elevation="5dp"
                android:id="@+id/input_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="TYP"
                android:textColor="@color/grey" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@color/brown"
            android:orientation="horizontal"
            android:paddingVertical="2dp">

            <Button
                android:id="@+id/m_clear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="MC"
                android:textColor="@color/grey" />

            <Button
                android:id="@+id/m_result"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="MR"
                android:textColor="@color/grey" />

            <Button
                android:id="@+id/m_plus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="M+"
                android:textColor="@color/grey" />

            <Button
                android:id="@+id/m_minus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="M-"
                android:textColor="@color/grey" />


            <Button
                android:id="@+id/all_clear"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_special_bg"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="AC"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/backspace"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_backspace_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/nd"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="D"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/ne"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="E"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/nf"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="F"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/ex_nor"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="9"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="XNOR"
                android:textColor="@color/orange"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/na"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="A"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/nb"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="B"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/nc"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="C"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/ex_or"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="9"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="xor"
                android:textColor="@color/orange"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/n7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="7"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/n8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="8"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/n9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="9"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="9"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="OR"
                android:textColor="@color/orange"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/n4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="4"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/n5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="5"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/n6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="6"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/and"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="9"
                android:background="@drawable/button_operator_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="AND"
                android:textColor="@color/orange"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/n1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="1"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/n2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="2"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/n3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="3"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mul"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_operator_bg"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="*"
                    android:textColor="@color/orange"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/divide"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_operator_bg"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="/"
                    android:textColor="@color/orange"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/n0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="0"
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/dot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_number_bg"
                android:fontFamily="sans-serif-smallcaps"
                android:text="."
                android:textColor="@color/grey"
                android:textSize="25sp" />

            <Button
                android:id="@+id/equal_to"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_special_bg"
                android:text="="
                android:textColor="@color/white"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/plus"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_operator_bg"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="+"
                    android:textColor="@color/orange"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_operator_bg"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="-"
                    android:textColor="@color/orange"
                    android:textSize="25sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>